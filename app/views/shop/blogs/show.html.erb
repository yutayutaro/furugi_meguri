<%= link_to '一覧へ戻る',shop_blogs_path,class: "btn btn-primary" %>
<h1 class="h1-text">ブログ詳細画面</h1>
<table class="table">
 <tbody>
  <tr>
   <th><%="タイトル"%></th>
   <td><%=@blog.title%></td>
  </tr>
  <tr>
   <th><%="ブログ"%></th>
   <td><%=@blog.introduction%></td>
  </tr>  
  <tr>
   <th><%="画像"%></th>
   <% if @blog.image.attached? %>
   <td><%=image_tag @blog.image%></td>
   <% else %>
   <td><%="画像はありません"%></td>
   <% end %>
  </tr>      
  <tr>
   <th><%="作成日時"%></th>
   <td><%= @blog.created_at.strftime("%Y/%m/%d")%></td>
  </tr>
 </tbody>
</table>
<%=link_to '編集する', edit_shop_blog_path(params[:id]),class: "btn btn-warning"%>
<%=link_to '削除する', shop_blog_path(params[:id]), method: :delete,class: "btn btn-danger" %>