<% if @blog.shop.is_deleted == false %>
<h1 class="h1-text">店舗ブログ詳細画面</h1>
<table class = "table">
 <tbody>
     <tr>
      <th><%= "店舗名"%></th>
      <td><%=@blog.shop.name%></td>
     </tr>
     <tr>
      <th><%= "タイトル"%></th>
      <td><%=@blog.title%></td>
     </tr>
     <tr>
      <th><%= "ブログ"%></th>
      <td><%= @blog.introduction%></td>
     </tr> 
     <tr>
       <th><%= "作成日時"%></th>
       <td><%= @blog.created_at.strftime("%Y/%m/%d")%></td>
      </tr>
      <tr>
       <th><%= "画像" %></th> 
       <td>
           <% if @blog.image.attached? %>
            <%= image_tag @blog.image%>
           <% else %>
           <%="画像はありません"%>
           <% end %>
       </td>
      </tr>
 </tbody>
</table>
<%=link_to'削除する',admin_blog_path(@blog.id), method: :delete,class: "btn btn-danger" %>
<% else %>
<h3 class = "h3-text">このアカウントは削除されています</h3>
<% end %>