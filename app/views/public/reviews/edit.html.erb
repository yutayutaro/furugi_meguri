<h1 class="h1-text">レビュー編集</h1>
<%= form_with model: @review, url: review_path(params[:id]), method: :patch do |review| %>
<table class="table">
 <tbody>
  <tr>
   <th><%= "店舗名"%></th>
   <th><%=@review.shop.name%></th>
  </tr>
  <tr>
   <th><%= review.label :title,"タイトル"%></th>
   <td><%= review.text_field :title %></td>
  </tr>
  <tr>
   <th><%= review.label :introduction,"レビュー"%></th>
   <td><%= review.text_area :introduction%></td>
  </tr>
  <tr>
    <th><%= review.label :image,"画像"%></th>
    <td><%= review.file_field :image,accept: "image/*" %></td>
  </tr>
 </tbody>
</table>
<%= review.submit '変更を保存する',class: "btn btn-success"%>
<% end %>

