<% if @photo.shop.is_deleted == false%>
<h1 class="h1-text">店舗画像詳細画面</h1>
<table class="table">
 <tbody>
  <tr>
   <th><%= "店舗名"%></th>    
   <td><%=@photo.shop.name%></td>
  </tr>
  <tr>
   <th><%= "画像"%></th>  
   <td><%=image_tag @photo.image%></td>
  </tr>
  <tr>
   <th><%= "画像説明"%></th>  
   <td><%=@photo.introduction%></td>
  </tr>
  <tr>
   <th><%= "作成日時"%></th>
   <td><%= @photo.created_at.strftime("%Y/%m/%d")%></td>
  </tr>
 </tbody>
</table>
<%= link_to '編集する', edit_shop_shop_photo_path(params[:id]),class: "btn btn-warning" %>
<%= link_to '削除する', shop_shop_photo_path(params[:id]), method: :delete,class: "btn btn-danger" %>
<% else %>
<h1 class="h1-text">削除済みのアカウントです。</h1>
<% end %>