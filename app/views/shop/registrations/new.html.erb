<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%#= render "shops/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email,"登録メールアドレス"%><br />
    <%= f.email_field :email, autofocus: true%>
  </div>
  
    <div class="field">
    <%= f.label :name,"店舗名" %><br />
    <%= f.text_field :name%>
  </div>
  
  <div class="field">
    <%= f.label:address,"店舗住所"  %><br />
    <%= f.text_field :address%>
  </div>
  
  <div class="field">
    <%= f.label:introduction,"店舗説明" %><br />
    <%= f.text_area :introduction%>
  </div>

 <div class="field">
    <%= f.label:opening_hours,"営業時間"  %><br />
    <%= f.text_area :opening_hours %>
  </div>  
  
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "shop/shared/links" %>
